@model Courier.Models.GraficosModels
@{
    var grid = new WebGrid(Model.ListaOT,rowsPerPage:20,ajaxUpdateContainerId:"myGrid");    
} 

<link href="@Url.Content("~/Content/table.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/GridView.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/redmond/jquery-ui-1.9.1.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.9.0.custom.js")")" type="text/javascript"></script>

<style>
.mGridl {   
    width: 80%;   
    background-color: #fff;   
    margin: 5px 0 10px 0;   
    border: solid 1px #6394CE;   
    border-collapse:collapse;   
 }     
.mGridl td {   
    padding: 2px;   
    border: solid 1px #c1c1c1;   
    color: #717171; 
    font-size: 0.9em;  
}  
.mGridl th {   
    padding: 4px 2px;   
    color: #000;   
    background: #424242 url(../images/toolbar_bg.png) repeat-x top;   
    border-left: solid 1px #6394CE;   
    font-size: 0.9em;   
}  
.mGridl .alt { background: #fcfcfc url(grd_alt.png) repeat-x top; }  
.mGridl .pgr { background: #424242 url(grd_pgr.png) repeat-x top; }  
.mGridl .pgr table { margin: 5px 0; }  
.mGridl .pgr td {   
    border-width: 0;   
    padding: 0 6px;   
    border-left: solid 1px #666;   
    font-weight: bold;   
    color: #fff;   
    line-height: 12px;   
 }     
.mGridl .pgr a { color: #666; text-decoration: none; }  
.mGridl .pgr a:hover { color: #000; text-decoration: none; }  
.fila-alternativa 
{
    background-color:#fafafa;
}

.mGridl tr:hover
{
    background-color:#FFF5E0;        
}
.mGridl tr a:hover
{
    color:Red;        
}    
    

</style>



<div id="myGrid">
@grid.GetHtml(
fillEmptyRows: true,
alternatingRowStyle: "fila-alternativa",
headerStyle: "encabezado-grid",
tableStyle: "mGridl",
footerStyle: "pie-grid",
mode: WebGridPagerModes.All,
firstText: "<< Primera",
previousText: "< Anterior",
nextText: "Siguiente >",
lastText: "Última >>",
columns: new[]
{

    
    grid.Column("ESTADO","",@<text>
        @if (item.ESTADO==10) { <img alt="@item.ESTADO_OT" src='@Url.Content("~/Images/circle_green.png")' /> }
        else if (item.ESTADO==8) { <img alt="@item.ESTADO_OT" src='@Url.Content("~/Images/circle_red.png")' /> }
        else if (item.ESTADO==6) { <img alt="@item.ESTADO_OT" src='@Url.Content("~/Images/circle_orange.png")' /> }
        else { <img alt="@item.ESTADO_OT" src='@Url.Content("~/Images/circle_blue.png")' /> }
    </text>),
    grid.Column("OT","OT"),
    grid.Column("CLIENTE","CLIENTE"),
    grid.Column("CIUDAD","CIUDAD"),
    grid.Column("ESTADO_OT","ESTADO")
})
</div>