            <label>@Model.OTD_DATOS.FL_FOL_DEN_DIRECCION&nbsp;@Model.OTD_DATOS.FL_FOL_DEN_NUMERO&nbsp;</label>
        }</div></td>
        <td><div class="textfield_effect">@Model.OTD_DATOS.FL_FOL_OTD_TELEFONO&nbsp;</div></td>
