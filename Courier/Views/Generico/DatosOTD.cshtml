        <td><div class="textfield_effect">@Model.OTD_DATOS.FL_FOL_OTD_REFERENCIA1&nbsp;</div></td>   
        <td><div class="textfield_effect">@Model.OTD_DATOS.FL_FOL_OTD_REFERENCIA2&nbsp;</div></td>  
