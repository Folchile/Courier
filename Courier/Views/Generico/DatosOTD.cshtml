        <td><div class="textfield_effect">@Model.OTD_DATOS.FL_FOL_OTD_DESTINATARIO_RUT&nbsp;</div></td>                
    </tr>
</table>
<table>
    <tr>
        <td>Suc. Destino</td>
        <td>Región</td>
        <td>Comuna</td>
