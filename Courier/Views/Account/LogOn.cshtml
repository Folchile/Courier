@model Courier.Models.LogOnModel
@{    
    Layout = "~/Views/Shared/_LayoutLogOn.cshtml";
    ViewBag.Title = "Iniciar Sesión";
}

<script src="@Url.Content("~/Scripts/jquery.validate.1.9.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/CustomFunction.js")" type="text/javascript"></script>
<script type="text/javascript" language="javascript">
    $(function () {
        $("#idlogin").button();
        $("#cancel").button().click(function () {
            location.href = '@Url.Action("Index","Home")';
        });
        $("#UserName").focus();
        $(document).tooltip();
    });
</script>


@using (Html.BeginForm("LogOn", "Account",FormMethod.Post, new { @class = "login-form",@id="LoginEnviar" }))
{	
		
		<h1>FOL COURIER</h1>
		<p>Ingreso para usuarios registrados.</p>            

		
	    <table>
        <tr>
            <td>Rut</td><td>:</td><td>@Html.TextBoxFor(m => m.UserName, new {  @class = "username", @title="Ingrese Rut Ej.:12345678-1"})</td>
        </tr>        
        <tr><td></td><td></td><td>@Html.ValidationMessageFor(m=>m.UserName)</td></tr>
        <tr>
            <td>Contraseña</td><td>:</td><td>@Html.PasswordFor(m => m.Password, new {  @class = "username", @title="Ingrese su contraseña" })</td>
        </tr>        
        <tr>
            <td></td><td></td><td>@Html.CheckBoxFor(m=>m.RememberMe)@Html.LabelFor(m=>m.RememberMe)</td>
        </tr>        
		</table>
		@Html.ValidationSummary("Se han encontrado los siguientes errores:", new { @style = "width:100%;margin-top:10px;" })

		<div class="options">
		    <input type="submit" name="idlogin" value="Aceptar" id="idlogin" class="button" />
            <input type="button" name="cancel" value="Cancelar" id="cancel" class="button" />
		</div>
		
		
}
