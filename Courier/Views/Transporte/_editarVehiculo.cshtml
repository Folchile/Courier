<script type="text/javascript">
    function Inicio() {
    }
    function Fin() {
        closeWaitingDialog();
    }
    function FinSuccess(data) {
        if (data.Ok == true) {
            $("#dialog-resultado").html(data.Mensaje);
            $("#dialog-resultado").dialog("open");
            cargadetVehiculoAll()
        }
        else {

            $("#dialog-resultado").html(data.Mensaje);
            $("#dialog-resultado").dialog("open");

        }

    }


    $(function () {
        $("#dialog-resultado").dialog({
            autoOpen: false,
            height: 'auto',
            width: 'auto',
            modal: true,

            buttons: {
                Aceptar: function () {
                    $(this).dialog("close");

                }

            }
        })
    })

   
    $("#MARCA").focus();

</script>


<div id="dialog-resultado" title="Resultado"></div>


