@model MvcReporteViajes.Models.CabeceraFoliosModels
@{
    ViewBag.Title = "Fondos";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript")></script>

<script type="text/javascript">


    function Inicio() {
    }
    function Fin() {
        closeWaitingDialog();
    }

    function FinSuccess(data) {
        if (data.Ok == true) {
            $("#dialog-result").html(data.Mensaje);
            $("#dialog-result").dialog("open");

        }
        else {
            alert(data.Mensaje);

        }

    }

    $("#FARENDIR").focus();  

    function teclaEnter(e, idElemento) {
        var esIE = (document.all);
        tecla = (esIE) ? event.keyCode : e.which;
        if (tecla == 13) {
            $("#" + idElemento).focus();
        }
    }

</script>



<div>
@using (Ajax.BeginForm("ActuaFondos", "Ingresos", new AjaxOptions { HttpMethod = "Post", OnBegin = "javascript:Inicio()", OnComplete = "javascript:Fin();", OnSuccess = "Javascript:FinSuccess(data)", OnFailure = "Javascript:FinError()" }, new { @id = "frmFondos" }))
{
    @Html.HiddenFor(m => m.FOLIO)
    <table border="0">
    <tr>
       <td><strong>@Html.LabelFor(m => m.FARENDIR)</strong></td>
       <td>@Html.TextBoxFor(m => m.FARENDIR, new { @style = "width:60px;font-size: 10px;text-align:right", @onkeypress = "javascript:teclaEnter(event,'TRENDIDO');" })</td>
    </tr>
    <tr>
        <td><strong>@Html.LabelFor(m => m.TRENDIDO)</strong></td>
        <td>@Html.TextBoxFor(m => m.TRENDIDO, new { @style = "width:60px;font-size: 10px;text-align:right", @onkeypress = "javascript:teclaEnter(event,'MDEVOLRECIB');" })</td>
    </tr>
    <tr>
       <td><strong>@Html.LabelFor(m => m.MDEVOLRECIB)</strong></td>
       <td>@Html.TextBoxFor(m => m.MDEVOLRECIB, new { @style = "width:60px;font-size: 10px;text-align:right" })</td>
    </tr> 
    
   </table>
    
}
</div>